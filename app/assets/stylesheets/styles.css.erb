body {
  background: url('<%= asset_path("tile.gif") %>') repeat center;
}

.alert {
  webkit-box-shadow: none;
  box-shadow: none;
}

.container {
  width: 970px;
  background-color: #fff;
  padding-left: 3px;
}

#wrapper {
  width: 100%;
  background: url('<%= asset_path("rockwood-panel.png") %>') repeat-y top center;
  padding-left: 25px;
}

#rockwood-header {
  background: transparent url('<%= asset_path("header.gif") %>') no-repeat scroll 0 0;
  width: 970px;
  margin-left:-3px;
  margin-top: 0px;
}

.eval-container {
  padding: 30px;
  padding-top: 130px;
}

.title {
  font-size: 25px;
  font-weight: bold;
  color: #730101;
  line-height: 30px;
  text-shadow: 0px 1px 1px #F1F2E9;
}

h3 {
  font-size: 17px;
  font-weight: bold;
  margin: 0 0 0.8em;
  padding: 0 0 0 0;
  color: #800101;
  line-height: 19px;
}

p {
  font-size: 16px;
  font-weight: normal;
  color: #000000;
  line-height: 19px;
}
label.control-label {
  font-size: 1.2em;
  display: block;
}

fieldset {
  border: none;
}

fieldset .error {
  border: 1px solid red;
}

#evaluation-edit .btn {
  margin-right: 10px;
  float: right;
}

#evaluation-edit .radio {
  display:inline;
}

#evaluation-edit .section-header {
  font-size: 1.5em;
  margin: 30px 0px;
  font-weight: bold;

}

#evaluation-edit input[type=radio] {
  position: inherit;
  margin-left:0;
  display: block;
  margin-bottom: 8px;
}

#evaluation-edit .radio label {
  padding-right:20px;
}

#invitations .form-control {
  
  display:inline;
  width: 300px;
}

#invitations .control-label {
  display: inline;
  margin-right: 8px;
}

#invitations .invalid-email-text {
  color: red;
}

#invitations .invalid-email {
  border-color: red;
}

.alert {
  margin-top: 14px;
  font-weight: bold;
}

#reminder-modal textarea {
  display: block;
  width: 95%;
  margin-top:10px;
}

#footer {
  background: transparent url('<%= asset_path("footer.gif") %>') no-repeat top center;
  height:106px;
  margin-left:24px;
}

