// Active Admin's got SASS!
@import "active_admin/mixins";
@import "active_admin/base";
$skinLogo: url('<%= asset_path("rw_logo.jpg") %>') no-repeat 0 0; 
$skinActiveColor: #7F2626; //highlight
$skinHeaderBck: #EEEEEE; //titlebar
$panelHeaderBck: #730101;

@import "active_skin";

#header {
  background: #730101;
}
#header #utility_nav {
  background: inherit;
}

#header #utility_nav li a:hover {
  color: white;
}

#header a, #header a:link {
  color: white;
}

#header #utility_nav li#logout a {
  text-decoration: none;
}

html {
  background: #f9f9f9;
}
body.active_admin {
  background: #f9f9f9;
}

#title_bar {
  border-bottom: 0px;
  box-shadow: 0 1px 4px;
}

#title_bar h2 {
  color: #363636;
}

#header ul.tabs > li:hover > a, #header ul.tabs > li.current > a {
  background: inherit;
}

#title_bar .action_items a:hover {
  background: inherit !important;
}

li.has_many_container .has_many_fields, li.has_many_container fieldset.inputs {
  border: none;
  padding-top: 0px;
}

.col-actions a, .row-actions td a {
  border: 1px solid #ccc;
  margin-left: 5px !important;
  border-radius: 3px;
  text-decoration: none;
  padding: 2px 8px !important;
}

.panel_contents .response {
  margin-bottom:15px;
}

#email-reports {
  margin-bottom: 10px;
  input#email {
    font-size: 1.2em;
    width: 12%;
    margin-right: 6px;
    padding: 4px 11px;
    border-radius: 3px;
    border: 1px solid #ccc;
    vertical-align: middle;
    color: #363636;

  }
  button#send-btn {
    font-size: 1.1em;
    border-radius: 3px;
    padding: 6px 24px;
    background-color: #2196F3;
    border: 1px solid;
    color: white;
    vertical-align: middle;
  }
}
